<head>
  <h1>Task Tracker</h1>
  <p>By Zack, Param, and Humza</p>
</head>

<h2 class="dashboard-title">Task Tracker Dashboard</h2>

<div class="centered-button">
  <a href="/add" class="btn">âž• Add New Task</a>
</div>
<table class="task-table">
  <thead>
    <tr>
      <th colspan="4">Task Tracker Dashboard</th>
    </tr>
    <tr>
      <th>Task</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if (tasks.length === 0) { %>
      <tr>
        <td colspan="4" class="empty">No tasks yet. Add one!</td>
      </tr>
    <% } else { %>
      <% tasks.forEach(task => { %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.dueDate || "No due date" %></td>
          <td><%= task.completed ? "âœ” Completed" : "ðŸ•’ Pending" %></td>
          <td>
           <a href="/edit/<%= task._id %>" class="edit">Edit</a>
           <form action="/delete/<%= task._id %>" method="POST" style="display:inline;">
    <button type="submit" class="delete-btn">Delete</button>
  </form>
</td>

        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>