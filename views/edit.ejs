<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= title %> Edit Task </title>
  <link rel="stylesheet" href="/style.css">
</head>

<form action="/update/<%= task._id %>" method="POST" class="task-form">
  <div class="form-group">
    <label for="title">Task Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= task.title %>"
      required
    >
  </div>

  <div class="form-group">
    <label for="dueDate">Due Date</label>
    <input
      type="date"
      id="dueDate"
      name="dueDate"
      value="<%= task.dueDate ? task.dueDate.toISOString().slice(0,10) : '' %>"
    >
  </div>

  <div class="form-group">
    <label for="completed">Status</label>
    <select id="completed" name="completed">
      <option value="false" <%= !task.completed ? "selected" : "" %>>Upcoming</option>
      <option value="true"  <%= task.completed ? "selected" : "" %>>Completed</option>
    </select>
  </div>

  <button type="submit" class="btn">Save Changes</button>
  <a href="/" class="btn-secondary">Cancel</a>
</form>
